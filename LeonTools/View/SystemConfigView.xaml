<Window x:Class="LeonTools.View.SystemConfigView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LeonTools.View"
      mc:Ignorable="d" 
      
      d:DesignHeight="320" d:DesignWidth="480"
      Width="480" Height="320"
      Title="系统设置" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Button x:Name="BtnAddAutoStart" Content="添加开机启动项" Height="30" Margin="10,5,10,5" Click="BtnAddAutoStart_Click" />
            <Button x:Name="BtnRemoveAutoStart" Content="移除开机启动项" Height="30" Margin="10,5,10,5" Click="BtnRemoveAutoStart_Click" />
        </StackPanel>
    </Grid>
</Window>
